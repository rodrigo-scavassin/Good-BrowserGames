<%- include('../_partial/_header.ejs') %>
<%- include('../_partial/_navbar_admin.ejs') %>
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Editor de Categorias</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">

                <form method="post" action="/categorias/<%= categoria._id %>?_method=DELETE">
                    <button type="submit" class="btn btn-outline-secondary">Delete Category</button>
                </form>
                <button type="button" class="btn btn-outline-secondary" onClick="history.go(-1)">Cancel</button>

            </div>
            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span>
                This week
            </button>
            </div>
        </div> 
        <form method="post" action="/categorias/<%= categoria._id %>?_method=PUT">
              <div class="mb-3">
              <label for="nome" class="form-label">Nome da Categoria</label>
              <input type="text" class="form-control" id="nome" name="nome" value="<%= categoria.nome %>">
              <div id="dica_nome" class="form-text">Insira o nome da Categoria aqui.</div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        </main>
    </div>
    </div>


