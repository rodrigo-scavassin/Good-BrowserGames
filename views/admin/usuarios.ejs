<%- include('../_partial/_header.ejs') %>
<%- include('../_partial/_navbar_admin.ejs') %>
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Usuarios</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <form action="/admin/usuarios/create">
                        <button type="submit" class="btn btn-outline-secondary">Criar Usuario</button>
                    </form>
                    <form class=" ml-5 d-flex search_tool">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success " type="submit">Procurar</button>
                    </form>
                </div>
            </div>
        </div> 
        <div class="table-responsive">
            <table class="table table-striped table-sm">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Sobrenome</th>
                <th scope="col">E-mail</th>
                <th scope="col">CPF</th>
                <th scope="col">Data Nascimento</th>
                <th scope="col">Adm</th>
                <th scope="col">Editar</th>
                </tr>
            </thead>
            <tbody>
                <% usuarios.forEach((usuario)=> { %>
                <tr>
                <td><%= usuario._id %></td>
                <td><%= usuario.nome %></td>
                <td><%= usuario.sobrenome %></td>
                <td><%= usuario.email %></td>
                <td><%= usuario.cpf %></td>
                <td><%= usuario.nascimento %></td>
                <td><input type = "checkbox" disabled="disabled" <%= usuario.administrador ? "checked" : "" %>></td>
                <td><a href="/admin/usuarios/edit/<%= usuario._id %>">Edit</a></td>          
                </tr>
                <% }) %>              
            </tbody>
            </table>
        </div>
        </main>
    </div>
    </div>


<%- include('../_partial/_footer_admin.ejs') %>